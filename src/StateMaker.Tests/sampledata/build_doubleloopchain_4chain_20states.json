{
  "initialState": {
    "step": 0,
    "loops": 0
  },
  "rules": [
    {
      "name": "advance",
      "condition": "step >= 0 && step < 4",
      "transformations": {
        "step": "step + 1"
      }
    },
    {
      "name": "advance",
      "condition": "step == 4",
      "transformations": {
        "step": "0"
      }
    },
    {
      "name": "advance",
      "condition": "step == 2",
      "transformations": {
        "step": "0",
        "loops": "loops +1"
      }
    },
    {
      "name": "advance",
      "condition": "step == 3",
      "transformations": {
        "step": "0",
        "loops": "loops +1"
      }
    }
  ],
  "config": {
    "maxStates": 20,
    "explorationStrategy": "BreadthFirstSearch"
  }
}